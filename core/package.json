{
  "name": "prism-gateway",
  "version": "3.0.0",
  "description": "PRISM-Gateway: 统一的7维度复盘和Gateway系统",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "prism": "src/cli/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "api": "bun run src/api/server.ts",
    "api:dev": "NODE_ENV=development bun run src/api/server.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:e2e": "bun test src/tests/e2e.test.ts",
    "test:unit": "bun test src/tests/*.test.ts",
    "test:api": "bun test src/tests/integration/api.test.ts",
    "build": "bun build src/index.ts --outdir dist",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:security": "eslint src/ --config .eslintrc.security.json",
    "type-check": "tsc --noEmit",
    "audit": "bun audit",
    "audit:fix": "bun update",
    "security": "bash ./scripts/security-scan.sh",
    "security:deps": "bash ./scripts/security-scan.sh --deps",
    "security:code": "bash ./scripts/security-scan.sh --code",
    "security:secrets": "bash ./scripts/security-scan.sh --secrets",
    "security:owasp": "bash ./scripts/security-scan.sh --owasp",
    "pre-commit": "bash ./scripts/pre-commit-check.sh",
    "ci": "bash ./scripts/pre-commit-check.sh",
    "docs": "echo 'API documentation available in docs/api/'",
    "docs:serve": "cd docs/api && python3 -m http.server 8080",
    "docs:verify": "node -e \"console.log('API docs verified at docs/api/')\""
  },
  "keywords": [
    "gateway",
    "retrospective",
    "ai",
    "prism",
    "cli",
    "7-dimensions"
  ],
  "author": "隔壁老王",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "commander": "^14.0.3",
    "hono": "^4.11.7",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "bun-types": "latest",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0"
  }
}
